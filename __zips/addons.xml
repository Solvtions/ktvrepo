<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.ktvwizard" name="KriTiK TV Wizard" version="0.1.10" provider-name="KriTiK TV">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">KriTiK TV Wizard</summary>
    <description lang="en">KriTiK TV Wizard allows you to get access to the latest KriTiK TV Custom Builds and much more..!!</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.Kritik" version="3.1" name="[COLOR red]KTV Live[/COLOR]" provider-name="Solvtion Specialist">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.addon.common" optional="true" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="startup">
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Kritik TV's Premium IPTV Service</summary>
        <description>Live TV / PPV / Sports / Kids / Movies / Entertainment at an affordable price for all.</description>
        <disclaimer></disclaimer>
        <language>en</language>
        <platform>all</platform>
    </extension>
</addon>

